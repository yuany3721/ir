<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ir.site.dao.DocMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.ir.site.entity.Doc">
        <id column="id" property="id" />
        <result column="publication" property="publication" />
        <result column="title" property="title" />
        <result column="author" property="author" />
        <result column="word" property="word" />
    </resultMap>

    <insert id="setPassage" parameterType="com.ir.site.entity.Doc">
        insert into doc (id, publication, title, author, word) values (#{id}, #{publication}, #{title}, #{author}, #{word})
    </insert>
    <select id="getAll" resultType="com.ir.site.entity.Doc">
        select * from doc
    </select>
    <select id="getById" resultType="com.ir.site.entity.Doc">
        select * from doc where id = #{id};
    </select>

</mapper>

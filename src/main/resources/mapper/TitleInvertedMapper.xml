<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ir.site.dao.TitleInvertedMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.ir.site.entity.TitleInverted">
        <result column="word" property="word" />
        <result column="passage" property="passage" />
    </resultMap>

    <insert id="addPassage" parameterType="com.ir.site.entity.TitleInverted">
        insert into title_inverted (word, passage) values (#{word}, #{passage})
    </insert>

    <select id="getPassageByWord" resultType="String" >
        select passage from title_inverted where word = #{word}
    </select>
</mapper>
